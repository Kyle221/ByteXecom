@model IList<ProductBrand>
@{
    ViewData["Title"] = "Index";
}




<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1>All Product Brands</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ProductBrand" asp-action="Create" class="btn btn-success">
              <i class="bi bi-file-earmark-plus-fill"></i> Add Product Brand 
            </a>
            <br />
            <br />
        </div>
    </div>
</div>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td width="50%">
                    @item.Name
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="ProductBrand" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="ProductBrand" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2"> <i class="bi bi-trash3-fill"></i> Delete</a>
                    </div>
                </td>
                <td>
                    <div class="w-50 btn-group" role="group">
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

